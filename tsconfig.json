{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "baseUrl": "src",
    "removeComments": false,
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node"
    ],
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/cli.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
