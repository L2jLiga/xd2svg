{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "outDir": "lib",
    "baseUrl": "src",
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node"
    ],
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
