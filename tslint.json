{
  "linterOptions": {
    "exclude": [
      "*.d.ts",
      "*.js"
    ]
  },
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-bitwise": false,
    "max-line-length": {
      "options": [
        200
      ]
    },
    "quotemark": {
      "options": [
        "single"
      ]
    },
    "no-console": false,
    "no-var-requires": false,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "array-type": [
      true,
      "array-simple"
    ],
    "radix": false,
    "prefer-for-of": false,
    "import-spacing": false
  },
  "rulesDirectory": [],
  "object-literal-sort-keys": [
    true,
    "ignore-case",
    "match-declaration-order",
    "shorthand-first"
  ]
}
